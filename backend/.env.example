# RunBeat Backend Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT COMMIT THE .env FILE - IT CONTAINS SENSITIVE CREDENTIALS

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://runbeat.app

# Firebase Configuration
# Get these values from your Firebase project console
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.firebasestorage.app
FIREBASE_SENDER_ID=your-firebase-sender-id

# Firebase Admin SDK (optional - for advanced server-side Firebase operations)
# FIREBASE_ADMIN_SDK_PATH=/path/to/service-account-key.json
# FIREBASE_ADMIN_CREDENTIALS={"type":"service_account",...}

# Spotify Configuration
# Get these values from your Spotify Developer Dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here
SPOTIFY_REDIRECT_URI=runbeat://callback

# Default Spotify Playlists (update with your playlist IDs)
SPOTIFY_HIGH_INTENSITY_PLAYLIST_ID=your-high-intensity-playlist-id
SPOTIFY_REST_PLAYLIST_ID=your-rest-playlist-id

# Spotify API Configuration
SPOTIFY_TOKEN_REFRESH_MARGIN=300

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (optional)
# DATABASE_URL=postgresql://username:password@localhost/runbeat

# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Background Tasks
SCHEDULER_TIMEZONE=UTC
TOKEN_CLEANUP_INTERVAL=3600

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5